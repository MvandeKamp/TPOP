<UserControl x:Class="TPOP.Addables.Lobby"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPOP.Addables"
             mc:Ignorable="d" Height="80">
    <Border BorderThickness="1" Margin="0" CornerRadius="8" Background="{DynamicResource MiddleGreyBrush}">
        <Grid>
            <TextBlock x:Name="txtLobbyName" HorizontalAlignment="Left" Height="39" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" Style="{DynamicResource BigTextBlockFlat}" Margin="10,0,0,0" Text="TestName123"/>
            <TextBlock x:Name="txtPlayerCount" HorizontalAlignment="Right" Height="39" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" Style="{DynamicResource HeadlineTextBlockFlat}" Margin="0,22,0,0" Text="0 / 0"/>
            <TextBlock x:Name="txtGameType" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" Style="{DynamicResource SmallTextBlockFlat}" Margin="10,39,0,0" Text="TestGameType"/>

        </Grid>
    </Border>
</UserControl>
